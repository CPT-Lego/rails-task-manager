<h1><%= @task.title %></h1>

<%= link_to 'Edit Task', edit_path(@task) %>

<p><%= @task.details %></p>

<p>
<%= @task.completed %>

<%= button_to 'Mark as completed', mark_completed_task_path(@task), method: :patch %>

 <%= button_to 'Delete Task', delete_task_path(@task), turbo_method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this task?' } %>
</p>

<a href="<%= back_to_tasks_path %>">Back to Tasks</a>
