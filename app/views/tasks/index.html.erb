<h1>List of tasks</h1>

<ol>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task_path(task.id) do %>
        <%= task.title %>
        <%= task.details %>
        <% if task.completed %>
          <i class="fa-regular fa-square-check"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
      <% end %>
    </li>
    <% end %>
</ol>
